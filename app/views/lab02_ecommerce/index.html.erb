<!DOCTYPE html>
<html >
<head>
  <meta charset="UTF-8">
  <%= stylesheet_link_tag "lab02_ecommerce" %>
</head>
<body>
  <div class="login-page">
  <div class="form">
      <div class="col-md-12">
      <%= form_with scope: :userlogin, url: login_path, local: true do |f| %>
      <div class="form-group">
        <label for="">Email</label>
        <%= f.text_field :email, class: "form-control" %>
      </div>
      <div class="form-group">
        <label for=""> Password </label>
        <%= f.password_field :password, class: "form-control" %>
      </div>
      <button type="submit" class="message">Login</button>
      <%= link_to "Register new account", register_path %>
      <% end %>
    </div>
  </div>
  </div>
</body>
</html>
