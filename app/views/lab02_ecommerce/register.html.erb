<!DOCTYPE html>
<html >
<head>
  <meta charset="UTF-8">
  <%= stylesheet_link_tag "lab02_ecommerce" %>
</head>

<body>
  <div class="login-page">
  <div class="form">
      <div class="col-md-12">
        <%= form_with scope: :user, url: index_path, local: true do |f| %>
        <div class="form-group">
            <label for=""> Your Name </label>
            <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
            <label for="">
              Your Email
            </label>
            <%= f.text_field :email, class: "form-control" %>
        </div>
        <div class="form-group">
            <label for="">
              Password
            </label>
            <%= f.password_field :password, class: "form-control" %>
        </div>
        <button type="submit" class="message">Register</button>
        <div class="alert alert-success" role="alert">
          <%= flash[:error] %>
        </div>
        <% end %>
      </div>
  </div>
</body>
</html>
